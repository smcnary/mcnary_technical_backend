# Terraform variables file for RDS deployment
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# Environment Configuration
environment = "prod"  # Options: dev, staging, prod

# Database Configuration
db_instance_identifier = "counselrank-prod-db"
db_name = "counselrank_prod"
db_username = "counselrank_admin"
db_password = "YOUR_SECURE_PASSWORD_HERE"  # Change this to a secure password
db_instance_class = "db.t3.micro"  # For production, consider db.t3.small or larger
allocated_storage = 20  # GB

# Network Configuration
vpc_id = ""  # Leave empty to use default VPC
subnet_ids = []  # Leave empty to use default subnets

# Example for custom VPC:
# vpc_id = "vpc-12345678"
# subnet_ids = ["subnet-12345678", "subnet-87654321"]
