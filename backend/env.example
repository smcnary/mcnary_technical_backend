# Environment configuration for CounselRank SEO CRM Backend

# Symfony
APP_ENV=dev
APP_SECRET=!ChangeMe!
APP_DEBUG=true

# Database
DB_DSN="postgresql://counselrank_user:counselrank_password@postgres:5432/counselrank_crm?serverVersion=16&charset=utf8"

# Redis
REDIS_DSN=redis://redis:6379
REDIS_CACHE_DSN=redis://redis:6379/1
REDIS_MESSENGER_DSN=redis://redis:6379/2

# Frontend URL
APP_FRONTEND_URL=http://localhost:3000

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Microsoft OAuth
MICROSOFT_OAUTH_CLIENT_ID=
MICROSOFT_OAUTH_CLIENT_SECRET=
MICROSOFT_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/microsoft/callback

# OpenPhone Integration
OPENPHONE_API_KEY=your_openphone_api_key_here
OPENPHONE_BASE_URL=https://api.openphone.com/v1
OPENPHONE_WEBHOOK_SECRET=your_webhook_secret_here

# Wappalyzer API for Technology Stack Detection
WAPPALYZER_API_KEY=your_wappalyzer_api_key_here

# JWT Configuration
JWT_SECRET_KEY=!ChangeMe!
JWT_PASSPHRASE=!ChangeMe!
JWT_TOKEN_TTL=3600

# Email Configuration
MAILER_DSN=smtp://localhost:1025

# Security
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'

# Monitoring
OPENTELEMETRY_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_METRICS_PORT=9090
